<header class="p-3 text-bg-dark">
    <div class="container">
      <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
        <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none">
          <svg class="bi me-2" width="40" height="32" role="img" aria-label="Bootstrap"><use xlink:href="#bootstrap"></use></svg>
        </a>

        <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
         <%= link_to "Home", artists_path , class: "nav-link px-2 text-secondary" %>
         <%= link_to "Galleries", galleries_path  , class: "nav-link px-2 text-white"%>
        </ul>
        <div class="text-end">
        <%if user_signed_in?%> 
          <%= link_to "Sign-Out", destroy_user_session_path ,method: :delete,type:"button" ,class:"btn btn-outline-light me-2"%>      
             <%= link_to "Edit-profile", edit_user_registration_path ,type:"button" ,class:"btn btn-outline-light me-2"%>
             <%else%>
            <%= link_to "Sign-In", new_user_session_path ,type:"button" ,class:"btn btn-outline-light me-2"%>
           <%= link_to "Sign-up", new_user_registration_path ,type:"button" ,class:"btn btn-warning"%>
           <%end%>
        </div>
      </div>
    </div>
  </header>
